---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projects Header</div>
  </div>

  <HorizontalCard
    title="AlertaRiscos"
    img="/post_img.webp"
    desc="Beta Tester and Prototype Designer for AlertaRiscos, a app developed to replace the slow and buggy alerts from Proteção Civil."
    url="#"
    badge="IN DEVELOPMENT"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Blumemail"
    img="/post_img.webp"
    desc="US based e-mail service that protects your privacy."
    url="blumemail.net"
  />
</BaseLayout>
